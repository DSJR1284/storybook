<br><br>

    <% if @story %>
        <h3> Title : <%= @story.title%></h3><br>
        <h3> Story: <%= @story.description%></h3>
    <% else %>
        <h1>Comment index</h1>
    <% end %><br><br>

        <label> All Comments</label>
        <% @comments.each do |c| %>        
            <ul><%= c.reviews %></ul>
            <p>Comment By: <p>
            <ul><%= c.user.username %></ul>
            <% if current_user.id == c.user_id%>
                <%= link_to "Edit", edit_comment_path(c)%> 
            <% end %>
        <% end %><br><br>
 


