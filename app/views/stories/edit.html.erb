<h1> Edit Story  </h1>

    <%= form_with model: @story do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <%= f.label :Story %>
    <%= f.text_area :description %><br><br>
    <%= f.submit "Submit Revised Story" %><br><br>
    <% end %>


<%= button_to 'Delete Story', story_path(@story),
    data: {:confirm => 'Are you sure?'}, :method => :delete %> |  